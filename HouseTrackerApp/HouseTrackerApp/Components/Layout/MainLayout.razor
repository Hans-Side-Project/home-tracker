@inherits LayoutComponentBase

<div class="page" style="background: var(--bg-secondary); min-height: 100vh;">
    <div class="sidebar-green">
        <NavMenu />
    </div>

    <main style="margin-left: 250px;">
        <!-- 頂部導航欄 -->
        <div class="navbar-green">
            <div class="container-fluid px-4">
                <div class="navbar-brand-green">
                    <i class="bi bi-house-heart me-2"></i>
                    <span class="gradient-text">智能房貸計算器</span>
                </div>
            </div>
        </div>

        <!-- 主要內容區域 -->
        <article class="content px-4">
            <div class="container-fluid">
                @Body
            </div>
        </article>
    </main>
</div>

<!-- 錯誤提示 -->
<div id="blazor-error-ui" style="position: fixed; top: 20px; right: 20px; z-index: 1000;">
    <div class="alert-error rounded-green-lg p-4 shadow-lg">
        <div class="flex-between">
            <div class="d-flex align-items-center">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <span class="fw-semibold">系統發生未處理的錯誤</span>
            </div>
            <div class="d-flex gap-2">
                <a href="" class="btn-green btn-sm">重新載入</a>
                <a class="dismiss btn-green-ghost btn-sm">✕</a>
            </div>
        </div>
    </div>
</div>